<div class="container">
<div class="row">
  <article class="col-xs-12 col-md-12">

  <p id="notice"><%= notice %></p>

  <p>
    <strong>Name:</strong>
    <%= @user.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>

  <p>
    <strong>Image:</strong><br>
    <%= image_tag @user.image.url, class: "user-img" %>
  </p>

  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Back', pictures_path %>
  </article>
</div>
</div>
