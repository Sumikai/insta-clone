<div class="container">
  <h1 class="my-4">Pictures
    <small>Favorite List</small>
  </h1>
  
    <div class="row">
    <% @pictures.each do |picture|  %>
      <div class="col-lg-6 portfolio-item">
        <div class="card h-100">
          <%= link_to image_tag(picture.image.url), picture %>
          <div class="card-body">
            <h4 class="card-title">
              <%= link_to picture.content, picture %>
            </h4>
            <p class="card-text">
              <%= picture.user.name %>
              Ôºè
              <%= simple_time(picture.created_at) %>
            </p>
        </div>
        </div>
      </div>
    <% end %>
  </div>
</div>